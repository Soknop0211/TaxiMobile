<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FormattedNumberEditText">
        <attr name="prefix" format="string" />
        <attr name="numberOfGroups" format="integer" />
        <attr name="groupLength" format="integer" />
        <attr name="groupSeparator" format="string" />
    </declare-styleable>

    <declare-styleable name="NumericKeyboard">
        <attr name="field" format="reference" />
        <attr name="fieldMaxLength" format="integer" />

        <attr name="keyHeight" format="dimension" />
        <attr name="keyTextSize" format="dimension" />
        <attr name="keyTextColor" format="color" />

        <attr name="keySpecial" format="string" />
    </declare-styleable>

</resources>