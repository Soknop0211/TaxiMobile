<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.identity_verification.IdentityVerificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/appbar_layout" />

        <LinearLayout
            android:id="@+id/kycDescriptionContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                style="@style/BodyTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="20dp"
                android:padding="4dp"
                android:text="@string/know_your_customer_kyc"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingEnd="5dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="13dp"
                    android:src="@drawable/business_card_icon"
                    app:tint="@color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BodyTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="3dp"
                        android:text="@string/what_is_kyc"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights,SpUsage" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:background="@color/gray_dark" />

                    <TextView
                        style="@style/BodyTextStyle"
                        android:id="@+id/tv_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:padding="3dp"
                        android:text="@string/kyc_stands_for_know_your_customer_process_of_identifying_and_verifying_identify_of_customers"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        tools:ignore="SpUsage" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:paddingEnd="5dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="13dp"
                    android:src="@drawable/money_icon"
                    app:tint="@color/black" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        style="@style/BodyTextStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:padding="3dp"
                        android:text="@string/why_do_i_have_to_do_kyc"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        tools:ignore="NestedWeights,SpUsage" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0.9dp"
                        android:background="@color/gray_dark" />

                    <TextView
                        style="@style/BodyTextStyle"
                        android:id="@+id/kyc_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:padding="3dp"
                        android:text="@string/as_per_guidelines_of_s_all_customers_of_kyc"
                        android:textColor="@color/black_500"
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/kyc_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal" />

            <TextView
                style="@style/BodyTextStyle"
                android:id="@+id/kyc_text_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/action_re_submit_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="@string/resubmit"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>