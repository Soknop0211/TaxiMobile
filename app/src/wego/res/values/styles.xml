<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadTextStyle">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BodyTextStyle" >
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="Button.Large">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:gravity">left|center_horizontal|clip_horizontal</item>
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
    </style>

    <style name="Button.Large.Primary">
        <item name="android:textColor">@color/kesspay_accent_button_text_color</item>
        <item name="android:backgroundTint">@color/kesspay_primary_button_background</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">@dimen/text_secondary</item>

    </style>

    <style name="Button.Large.White">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <style name="Button.Large.gray_light">
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/gray_btn_bg_color</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">@dimen/text_primary</item>
    </style>

    <style name="Button.Large.white_background">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">5dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:fontFamily">@font/dmsans_regular</item>
        <item name="android:textSize">@dimen/text_secondary</item>

    </style>
</resources>