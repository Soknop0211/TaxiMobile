    <style name="Text"> </style>

    <style name="Text.Secondary">
        <item name="android:textSize">@dimen/text_secondary</item>
        <item name="android:lineSpacingMultiplier">1.075</item>
    </style>

    <style name="Text.Secondary.Medium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Secondary.FeedStoryTitle">
        <item name="android:textColor">@color/blue_gray</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/list_item_avatar_margin_end</item>
        <item name="android:layout_marginTop">@dimen/feed_item_padding</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">@dimen/list_item_avatar_margin_end</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="Text.Tertiary">
        <item name="android:textSize">@dimen/text_tertiary</item>
        <item name="android:lineSpacingMultiplier">1.05</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textSize">@dimen/text_primary</item>
        <item name="android:lineSpacingMultiplier">1.11</item>
    </style>

    <style name="Button.Small.NoOutLine" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
    </style>


    <style name="Button.Small.NoOutLine.8dp" parent="Button.Small.NoOutLine">
        <!--        <item name="android:background">@drawable/kesspay_button_background_no_outline_round_8dp</item>-->
        <item name="cornerRadius">8dp</item>
        <!--        <item name="android:backgroundTint">@color/white</item>-->
    </style>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="AppBottomSheetDialogTheme" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>
    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_corner</item>
    </style>


</resources>